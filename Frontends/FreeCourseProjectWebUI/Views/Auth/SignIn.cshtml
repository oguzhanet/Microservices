<body class="text-center">

    <main class="form-signin">
        <form asp-controller="Auth" asp-action="SignIn"> 
            <img class="mb-4" src="/resim.jpeg" alt="" width="144" height="114">
            <h1 class="h3 mb-3 fw-normal">Üye Girişi</h1>
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form-floating">
                <input asp-for="Email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput" asp-for="Email"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
                <label asp-for="Password" for="floatingPassword"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="checkbox mb-3">
                <label>
                    <input asp-for="IsRemember" type="checkbox" value="remember-me"> Beni hatırla
                </label>
            </div>
            <button class="w-100 btn btn-lg btn-primary" type="submit">Giriş Yap</button>
            <p class="mt-5 mb-3 text-muted">&copy; 2019 - @DateTime.Now.Year</p>
        </form>
    </main>



</body>
