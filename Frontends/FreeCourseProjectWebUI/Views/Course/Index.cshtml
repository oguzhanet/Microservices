@model List<CourseViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Kurslar</h5>
                <a asp-controller="Course" asp-action="Create" class="btn btn-primary mb-3">Kurs oluştur</a>
                @if (Model.Any())
                {
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Resim</th>
                                <th>Kurs isim</th>
                                <th>Fiyat</th>
                                <th>Süre</th>
                                <th>Kategori</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td></td>
                                    <td>@item.Name</td>
                                    <td>@item.Price</td>
                                    <td>@item.Feature.Duration</td>
                                    <td>@item.Category.Name</td>
                                    <td>
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-secondary btn-sm dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                                İşlemler
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li><a asp-controller="Course" asp-action="Update" asp-route-id="@item.Id" class="dropdown-item btn btn-warning btn-sm">Düzenle</a></li>
                                                <li><a asp-controller="Course" asp-action="Delete" asp-route-id="@item.Id" class="dropdown-item btn btn-danger btn-sm">Sil</a></li>
                                                @*<li><a class="dropdown-item" href="#">Another action</a></li>*@
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-info">Kayıtlı kurs bulunamadı</div>
                }
